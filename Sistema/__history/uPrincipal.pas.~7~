unit uPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.Imaging.pngimage;

type
  TfrmPrincipal = class(TForm)
    pnpTitulo: TPanel;
    pnpPrincipal: TPanel;
    Panel2: TPanel;
    pnpCad: TPanel;
    Image2: TImage;
    Panel1: TPanel;
    Image1: TImage;
    Panel3: TPanel;
    Image3: TImage;
    Panel4: TPanel;
    Image4: TImage;
    procedure Panel4Enter(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

procedure TfrmPrincipal.Panel4Enter(Sender: TObject);
begin
  if not(Sender is TPanel) then
    exit;
  (Sender as TPanel).Color = RGB(43, 162, 182)
end;

end.
